{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",     
  "name": "必定AI文档",
  "colors": {
    "primary": "#2563EB",
    "light": "#3B82F6",
    "dark": "#1D4ED8"
  },
  "favicon": "/favicon.svg",
  "navigation": {
    "tabs": [
      {
        "tab": "首页",
        "groups": [
          {
            "group": "入门指南",
            "pages": [
              "index",
              "quickstart",
              "development"
            ]
          },
          {
            "group": "自定义配置",
            "pages": [
              "essentials/settings",
              "essentials/navigation"
            ]
          },
          {
            "group": "内容编写",
            "pages": [
              "essentials/markdown",
              "essentials/code",
              "essentials/images",
              "essentials/reusable-snippets"
            ]
          },
          {
            "group": "AI 工具",
            "pages": [
              "ai-tools/cursor",
              "ai-tools/claude-code",
              "ai-tools/windsurf"
            ]
          }
        ]
      },
      {
        "tab": "API 参考",
        "groups": [
          {
            "group": "API 文档",
            "pages": [
              "api/introduction"
            ]
          },
          {
            "group": "端点示例",
            "pages": [
              "api/endpoint/get",
              "api/endpoint/create",
              "api/endpoint/delete",
              "api/endpoint/webhook"
            ]
          }
        ]
      }
    ],
    "global": {
      "anchors": [
        {
          "anchor": "官网",
          "href": "https://buidai.com",
          "icon": "book-open-cover"
        },
        {
          "anchor": "API",
          "href": "https://buidai.com/docs",
          "icon": "book-open-cover"
        },
        {
          "anchor": "博客",
          "href": "https://buidai.com/blog",
          "icon": "newspaper"
        }
      ]
    }
  },
  "logo": {
    "light": "/logo/light.svg",
    "dark": "/logo/dark.svg"
  },

  "navbar": {
    "links": [
      {
        "label": "支持",
        "href": "mailto:hi@mintlify.com"
      }
    ],
    "primary": {
      "type": "button",
      "label": "控制台",
      "href": "https://dashboard.mintlify.com"
    }
  },
  "contextual": {
    "options": [
     "copy",
     "view",
     "chatgpt",
     "claude",
     "perplexity",
     "mcp",
     "cursor",
     "vscode"
   ]
  },
  "footer": {
    "socials": {
      "x": "https://x.com/mintlify",
      "github": "https://github.com/mintlify",
      "linkedin": "https://linkedin.com/company/mintlify"
    }
  }
